            @if (ViewContext.HttpContext.User.IsInRole("Association") || ViewContext.HttpContext.User.IsInRole("Admin"))
            {
                <a class="decoText pink" asp-action="Edit" asp-route-id="@adoption.Id">Edit</a><i> | </i>
