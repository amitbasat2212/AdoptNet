<header class="jumbotron bg-cover text-white image">

    <div class="container py-5 text-center">
        <h2 class="display-4 font-weight-bold">Animals-Products</h2>
    </div>

</header>

@if (ViewContext.HttpContext.User.IsInRole("Association") || ViewContext.HttpContext.User.IsInRole("Admin"))
{
<a asp-action="Create"><input value="Add-Product" style="width: 155px;" class="btn btn-outline-dark subotton mix" /></a>
}

<div style="text-align: center; margin-right: -80px;">
    <form asp-controller="Products" asp-action="Search">
        <input name="Searching" placeholder="Enter something to search" />
        <input type="submit" value="Search" class="btn btn-outline-dark subotton"
               style="height:40px; margin-bottom: 15px;" />
    </form>
</div>


<div class="row padup ">

    @foreach (var products in Model)
    {
<div class="col-md-3">

    <div class="card">
        <img src="~/css/51205.jpg" class="card-img-topProduct" width="80%">
        <div class="card-body  pt-0 px-0">
            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                <small class="text-muted mt-1">Animal Name</small>
                <h5 class="pink">@products.Animal.Name</h5>
            </div>
            <hr class="mt-2 mx-3">
            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                <small class="text-muted mt-1">Animal food</small>
                <h5 class="pink">@products.Food</h5>
            </div>
            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                <small class="text-muted mt-1">Animal Toy</small>
                <h5 class="pink">@products.Toy</h5>
            </div>
            <hr class="mt-2 mx-3">
            <div class="d-flex flex-row justify-content-between mb-0 px-3">
                <small class="text-muted mt-1">Animal Medicine</small>
                <h5 class="pink">@products.Medicine</h5>
            </div>
            @if (ViewContext.HttpContext.User.IsInRole("Association") || ViewContext.HttpContext.User.IsInRole("Admin"))
            {
<div class="mx-3 mt-3 mb-2">
    <a class="decoText pink" asp-action="Edit" asp-route-id="@products.Id">Edit</a> |
    <a class="decoText pink" asp-action="Delete" asp-route-id="@products.Id">Delete</a>

</div>}
        </div>
    </div>

</div>}



</div>