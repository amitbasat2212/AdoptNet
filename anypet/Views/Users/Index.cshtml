<h1>Users Managing</h1>

<a asp-action="Create"><input value="Add-User" style="width:155px;" class="btn btn-outline-dark subotton mix" /></a>

<div style="text-align: center; margin-right: -80px;">
    <form asp-controller="Users" asp-action="Search">
        <input name="Searching" placeholder="Enter something to search" />
        <input type="submit" value="Search" class="btn btn-outline-dark subotton"
               style="height:40px; margin-bottom: 15px;" />
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (ViewContext.HttpContext.User.IsInRole("Admin"))
        {
@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>
}}

        @if (ViewContext.HttpContext.User.IsInRole("User"))
        {

<tr>
    <td>
        @Html.DisplayNameFor(model => model.Username)
    </td>

</tr>
}

